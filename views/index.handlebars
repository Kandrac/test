    
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="title">Eat the Burgers!</h1>
      <img class="burgerImg" src="https://i.imgur.com/3ccsTEQb.jpg"/>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h2>Hot Fresh Burgers!</h2>
      <ul>
        {{#each burgers}}
          {{#unless eaten}}
            {{> burgers/burger-block}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      <h2>Buger Wrappers</h2>
      <ul>
        {{#each burgers}}
          {{#if this.eaten}}
            <li>
              {{id}}
              {{name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="addBurger">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="newBurger">Type of Burger:</label>
          <input type="text" id="newBurger" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
      </div>
    </div>
  </div>
</div>